{
  "name": "npm-package-starter",
  "version": "1.0.0",
  "description": "Starter for a npm package",
  "main": "./src/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "eslint": "eslint . --ext .js,.jsx,.ts,.tsx --fix"
  },
  "author": "Gressia",
  "license": "ISC",
  "dependencies": {
    "eslint": "^7.25.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(build|node_modules)/"
    ],
    "testRegex": [
      ".test.ts$",
      ".test.tsx$"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^4.22.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^32.3.3",
    "husky": "^6.0.0"
  }
}
